@model eShopSolution.ViewModels.System.Users.RoleAssignRequest

@{
	ViewData["Title"] = "Gán quyền";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
	<h1 class="mt-4">Gán quyền</h1>
	<ol class="breadcrumb mb-4">
		<li class="breadcrumb-item"><a href="index.html">Trang chủ</a></li>
		<li class="breadcrumb-item active">Gán quyền</li>
	</ol>
	<div class="card mb-4">
		<div class="card-header">
			<a class="btn btn-success" asp-action="Index">Về danh sách</a>
		</div>
		<div class="card-body">
			<div class="row">
				<div class="col-md-4">
					<form asp-action="RoleAssign">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<input type="hidden" asp-for="Id" />
						@for (var i = 0; i < Model.Roles.Count; i++)
						{
							<div class="form-group">
								@Model.Roles[i].Name
								<input type="checkbox" asp-for="Roles[i].Selected" />
								<input type="hidden" asp-for="Roles[i].Id" />
								<input type="hidden" asp-for="Roles[i].Name" />
							</div>
						}
						<div class="form-group mt-4">
							<input type="submit" value="Lưu lại" class="btn btn-primary" />
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

